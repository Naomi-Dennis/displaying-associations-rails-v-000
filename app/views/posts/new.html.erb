<h1>New Post</h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title, 'Post Title:' %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, 'Post Description:' %><br>
    <%= f.text_area :description %>
  </div>


  <br/>
  <%= f.label :category_id, :category %><%= f.text_field :category %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
